{
  "compilerOptions": {
    "target": "ES2020", // Modern JS target
    "lib": ["ES2020", "DOM"], // Include DOM + ES2020 features
    "module": "NodeNext", // Matches Cypress + Node ecosystem
    "moduleResolution": "NodeNext", // Proper resolution for NodeNext
    "types": ["cypress", "node", "@testing-library/cypress", "@cypress/grep"],
    "esModuleInterop": true, // For default imports from CommonJS
    "strict": true, // Enable strict type checking
    "baseUrl": ".", // ✅ Required for tsconfig-paths
    "paths": {
      "@/*": ["cypress/*"] // ✅ Adjust alias for Cypress folder
    },
    "skipLibCheck": true // Speeds up compilation
  },
  "include": ["**/*.ts", "**/*.tsx", "cypress/**/*.ts", "cypress/**/*.tsx"]
}
