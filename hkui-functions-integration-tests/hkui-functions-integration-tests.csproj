	  <ProjectReference Include="..\polaris-gateway\polaris-gateway.csproj" />
	  <ProjectReference Include="..\polaris-pipeline\Common\Common.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Using Include="Xunit" />
	</ItemGroup>

	<ItemGroup>
	  <None Update="integration-test.settings.json">
